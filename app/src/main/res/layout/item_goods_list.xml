<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/all_goods"
        android:layout_width="@dimen/px_510"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/px_30"
        android:gravity="center"
        android:orientation="vertical">


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="@dimen/px_432"
            android:layout_height="@dimen/px_432"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_goods"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/iv_hd"
                android:layout_width="@dimen/px_115"
                android:layout_height="@dimen/px_115"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="@dimen/px_102"
                android:layout_height="@dimen/px_102"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="@dimen/px_20"
                android:src="@mipmap/ic_launcher"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_shouqing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher" />


        </com.zhy.autolayout.AutoRelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_126"
            android:clickable="false"
            android:layout_marginLeft="@dimen/px_32" />

        <TextView
            android:id="@+id/tv_goods_brand"
            android:layout_width="@dimen/px_430"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_15"
            android:ellipsize="end"
            android:gravity="left"
            android:paddingLeft="@dimen/px_15"
            android:singleLine="true"
            android:text="GUCCI"
            android:textColor="#000000"
            android:textSize="@dimen/px_46" />

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="@dimen/px_430"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_10"
            android:layout_marginTop="@dimen/px_15"
            android:ellipsize="end"
            android:gravity="start"
            android:singleLine="true"
            android:text="VALENTINO/华伦天奴 "
            android:textColor="#000000"
            android:textSize="@dimen/px_40" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="59px"
            android:layout_marginLeft="@dimen/px_32"
            android:layout_marginTop="@dimen/px_15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_discount"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_43"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_place1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_43"
                android:layout_marginLeft="5px"
                android:paddingLeft="@dimen/px_10"
                android:paddingRight="@dimen/px_10"
                android:text="保税发货"
                android:textColor="#C6252B"
                android:textSize="@dimen/px_29" />

            <TextView
                android:id="@+id/tv_place2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_43"
                android:layout_marginLeft="5px"
                android:paddingLeft="@dimen/px_10"
                android:paddingRight="@dimen/px_10"
                android:text="保税发货"
                android:textColor="#C6252B"
                android:textSize="@dimen/px_29"
                android:visibility="gone" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_32"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="￥2000"
                android:textColor="#000000"
                android:textSize="@dimen/px_52" />

            <TextView
                android:id="@+id/tv_discount_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_10"
                android:paddingTop="3px"
                android:ellipsize="end"
                android:gravity="start"
                android:paddingLeft="@dimen/px_20"
                android:paddingRight="@dimen/px_10"
                android:text="8.8折"
                android:textColor="#C6252B"
                android:textSize="@dimen/px_24" />

            <TextView
                android:id="@+id/tv_goods_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_10"
                android:ellipsize="end"
                android:gravity="start"
                android:text="￥8200"
                android:textColor="#999999"
                android:textSize="@dimen/px_35" />
        </com.zhy.autolayout.AutoLinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_size"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_150"
            android:layout_marginBottom="@dimen/px_32"
            android:paddingLeft="@dimen/px_32"
            android:paddingRight="@dimen/px_32" />


    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:id="@+id/txt_delete"
        android:layout_width="@dimen/px_30"
        android:layout_height="@dimen/px_36"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/px_510"
        android:layout_marginEnd="@dimen/px_75"
        android:layout_marginRight="@dimen/px_75"
        android:contentDescription="TODO"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone" />


</com.zhy.autolayout.AutoRelativeLayout>